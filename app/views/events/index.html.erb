

  <div class="container swiper mySwiper">
    <h1 class="text-center">Events around you !</h1>
    <div class="swiper-wrapper">
      <% @events.each do |event| %>
        <div class="event-cards swiper-slide">
          <div class="event-card">
            <h2><%= event.title %></h2>
            <time><%= event.time %></time>
            <p><%= link_to event.location, "https://www.google.com/maps/search/#{event.location}" %></p>
            <div class="card-buttons d-flex">
              <div class="events-card-details-buttons">
                <%= link_to "Details", event_path(event), class:"button", style:"color: white !important"  %>
              </div>
              <div class="events-card-tickets-button">
                <%= link_to "Tickets", "#", class:"button", style:"color: white !important" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="swiper-button-next "></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
</div>
