<div class="container my-5">
  <div class="event-show-content">
    <%= simple_form_for(@event) do |f| %>
      <%= f.input :title, placeholder: "Event title", label: false, input_html: { autocomplete: 'off' } %>
      <%= f.input :location, placeholder: "Where will the event be held?", label: false, input_html: { autocomplete: 'off' } %>
      <%= f.input :theme, placeholder: "What is the theme?", label: false, input_html: { autocomplete: 'off' } %>
      <%= f.input :price, placeholder: "Price", label: false, input_html: { min: 0, autocomplete: 'off' } %>
      <%= f.input :description, placeholder: "Describe the event", label: false, input_html: { autocomplete: 'off' } %>
      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker", autocomplete: 'off'} %>
      <div class="event-buttons">
        <%= f.submit "Create", class: "button draw-border mr-2", id: "event-show-create" %>
    <% end %>
        <%= link_to "Back to events", events_path , class: "button draw-border mr-2", id: "event-show-back" %>
      </div>
  </div>
</div>
