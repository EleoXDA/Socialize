<div class = "container mt-1 d-fixed right-0 bottom-0">

  <%if current_user == chat_request.asker%>
    <%= chat_request.receiver.nickname%> - <%= chat_request.status %>
  <% end%>
  <%= chat_request.receiver %>
  <% if current_user == chat_request.receiver %>
    <%= chat_request.asker.nickname %>
    <% if chat_request.pending? == false %>
      <%= chat_request.status %>
    <% else %>
      <%= link_to chat_request_path(chat_request, status: 1), data: {'turbo-method': :patch}, class: "button draw-border rounded-5 rounded-circle fa-solid fa-plus-large" %>
      <%= link_to chat_request_path(chat_request, status: -1), data: {'turbo-method': :patch}, class: "button draw-border rounded-5 rounded-circle fa-regular fa-trash" %>
    <% end %>
  <% end %>
</div>
