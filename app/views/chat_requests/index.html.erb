
<div class ="container text-center mt-5">
<ul class="nav nav-tabs border-bottom-0" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Accepted</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Declined</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Pending</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <ul class="liststyle">
      <% @chat_requests_hash[:confirmed].each do |request| %>
        <% if current_user == request.receiver %>
          <li><div class="card-request " style="width: 18rem;" ><%= request.asker.nickname %>
            <picture id="user-request">
              <% if request.asker.image.nil? %>
                <%= image_tag "userphoto_square.jpg", :class => "img-request" %>
              <% else %>
                <%= image_tag request.asker.image, :class => "img-request" %>
              <% end %>
            </picture>
            <div class="container">
              <div class="icon-container">
                <ul class="social-icons" style="padding-left: 0px !important">
                  <li><a class="card-icon-container" href="#"><i class="social-icon fa-brands fa-github"></i></a></li>
                </ul>
                </div>
              </div>
            </div>
          </li>
        <% else %>
          <li>
            <div class="card-request" style="width: 18rem;" ><%= request.receiver.nickname %>
            <picture id="user-request">
                <% if request.receiver.image.nil? %>
                  <%= image_tag "userphoto_square.jpg", :class => "img-request" %>
                <% else %>
                  <%= image_tag request.receiver.image, :class => "img-request" %>
                <% end %>
              </picture>
              <div class="container">
                  <div class="icon-container">
                    <ul class="social-icons" style="padding-left: 0px !important">
                      <li><a class="card-icon-container" href="#"><i class="social-icon fa-brands fa-github"></i></a></li>
                    </ul>
                  </div>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <ul class="liststyle">
      <% @chat_requests_hash[:rejected].each do |request| %>
        <% if current_user == request.receiver %>
          <li>
            <div class="card-request" style="width: 18rem;" ><p><%= request.asker.nickname %></p>
              <picture id="user-request">
                <% if request.asker.image.nil? %>
                  <%= image_tag "userphoto_square.jpg",:class => "img-request" %>
                <% else %>
                  <%= image_tag request.asker.image,:class => "img-request" %>
                <% end %>
              </picture>
                <div class="container">
                  <div class="icon-container">
                    <ul class="social-icons" style="padding-left: 0px !important">
                      <li><a class="card-icon-container" href="#"><i class="social-icon fa-brands fa-github"></i></a></li>
                    </ul>
                  </div>
                </div>
            </div>
          </li>
        <% else %>
          <li>
            <div class="card-request"  style="width: 18rem;" ><%= request.receiver.nickname %>
              <picture id="user-request">
                <% if request.receiver.image.nil? %>
                  <%= image_tag "userphoto_square.jpg",:class => "img-request" %>
                <% else %>
                  <%= image_tag request.receiver.image,:class => "img-request" %>
                <% end %>
              </picture>
                <div class="container">
                    <div class="icon-container">
                      <ul class="social-icons" style="padding-left: 0px !important">
                        <li><a class="card-icon-container" href="#"><i class="social-icon fa-brands fa-github"></i></a></li>
                      </ul>
                    </div>
                  </div>
            </div>
          </li>
      <% end %>
    <% end %>
    </ul>
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
    <ul class="liststyle">
      <% @chat_requests_hash[:pending].each do |request| %>
        <% if current_user == request.asker %>
            <li>
              <div class="card-request" style="width: 18rem;" ><p><%= request.receiver.nickname %></p>
                <picture id="user-request">
                  <% if request.receiver.image.nil? %>
                    <%= image_tag "userphoto_square.jpg", :class => "img-request" %>
                  <% else %>
                    <%= image_tag request.receiver.image, :class => "img-request" %>
                  <% end %>
                </picture>
                <%= render partial: "chat_request", locals: { chat_request: request} %>
                <div class="container">
                  <div class="icon-container">
                    <ul class="social-icons" style="padding-left: 0px !important">
                      <li><a class="card-icon-container" href="#"><i class="social-icon fa-brands fa-github"></i></a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </li>
          <% else %>
         <li>
          <div class="card-request" style="width: 18rem;" ><p><%= request.asker.nickname%></p>
              <picture id="user-request">
                <% if request.asker.image.nil? %>
                  <%= image_tag "userphoto_square.jpg", :class => "img-request" %>
                <% else %>
                  <%= image_tag request.asker.image, :class => "img-request" %>
                <% end %>
              </picture>
          <%= render partial: "chat_request", locals: { chat_request: request} %>
            <div class="container">
              <div class="icon-container">
                <ul class="social-icons" style="padding-left: 0px !important">
                  <li><a class="card-icon-container" href="#"><i class="social-icon fa-brands fa-github"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
        </li>
        <% end %>
     <% end %>
    </ul>
  </div>
</div>
</div>
